<?xml version="1.0" encoding="utf-8"?>
<!-- J'utilise un ScrollView pour permettre le défilement sur les petits écrans -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atelier de Création"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Décrivez votre nouveau cours"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Nom du Cours Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom du Cours"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Entrez le nom du cours"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Niveau Cible Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Niveau Cible"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Les TextViews pour les labels de la SeekBar -->
                    <TextView style="@style/SeekBarLabel" android:text="Débutant" />
                    <TextView style="@style/SeekBarLabel" android:text="Intermédiaire" android:gravity="center" />
                    <TextView style="@style/SeekBarLabel" android:text="Avancé" android:gravity="center" />
                    <TextView style="@style/SeekBarLabel" android:text="Expert" android:gravity="end" />

                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekbar_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="3"
                    android:progress="1"
                    android:progressTint="#9C7FD8"
                    android:thumbTint="#9C7FD8" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Objectifs et Contraintes Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Description du cours"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_objectives"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/edittext_background"
                        android:gravity="top|start"
                        android:hint="Décrivez les objectifs principaux du cours, la durée souhaitée, et tout autre matériel à inclure..."
                        android:inputType="textMultiLine"
                        android:maxLength="500"
                        android:padding="12dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_char_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/et_objectives"
                        android:layout_alignBottom="@id/et_objectives"
                        android:layout_margin="8dp"
                        android:text="0/500"
                        android:textColor="#999999"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bouton de génération -->
        <Button
            android:id="@+id/btn_generate_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_dark"
            android:padding="16dp"
            android:text="Générer le cours"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
